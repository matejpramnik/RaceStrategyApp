@model List<RaceStrategyApp.Models.RaceSeries>
@{
    ViewData["Title"] = "Šampionáty";
}
<style>
    .race-detail-table th {
        background-color: #f8f9fa;
        width: auto;
        vertical-align: middle;
        margin-inline: 4px;
    }
    table {
        border-collapse: collapse;
    }
    tr {
        border: solid;
        border-width: 1px 0;
        border-color: #999999;
    }
    tr:first-child {
        border-top: none;
    }

    tr:last-child {
        border-bottom: none;
    }
</style>

<div class="text-center container mt-4">
    <div class="card-header bg-primary text-white">
        <h2>Šampionáty</h2>
    </div>
    

    <table class="table table-striped race-detail-table" style="table-layout: auto; width: 100%;">

        <thead>
            <tr>
                <th>Id</th>
                <th>Meno</th>
                <th>ParticipantCount</th>
                <th>Akcia</th>
            </tr>
        </thead>


        <tbody>
            @if (Model != null && Model.Any()) {
                @foreach (var raceSeries in Model) {
                    <tr>
                        <td>@raceSeries.Id</td>
                        <td>@raceSeries.Name</td>
                        <td>@raceSeries.ParticipantCount</td>
                        <td>
                            <form method="post" asp-controller="Race" asp-action="All">
                                <input type="hidden" name="RSid" value="@raceSeries.Id" />
                                <button type="submit" name="All">Zobraziť preteky</button>
                            </form>
                        </td>

                        
                    </tr>
                }
            }
            else {
                <tr>
                    <td colspan="5">No race series found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
